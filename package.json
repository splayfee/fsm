{
  "name": "@edium/fsm",
  "version": "3.0.0",
  "description": "Simple finite state machine framework that can be used with client or server.",
  "repository": {
    "type": "git",
    "url": "https://github.com/splayfee/fsm.git"
  },
  "bugs": {
    "url": "https://github.com/splayfee/fsm/issues",
    "email": "david@edium.com"
  },
  "docs": {
    "url": "https://github.com/splayfee/fsm/blob/master/README.md"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean --tsconfig tsconfig.tsup.json",
    "fix": "pnpm lint --fix && pnpm format",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "keywords": [
    "finite state machine",
    "fsm",
    "workflow",
    "game engine",
    "state",
    "transitions",
    "triggers",
    "actions"
  ],
  "homepage": "https://github.com/splayfee/fsm",
  "author": "David LaTour <david@edium.com>",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.13",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "lodash-es": "^4.17.21",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
