{
  "name": "@edium/fsm",
  "version": "3.0.0",
  "description": "Simple finite state machine framework that can be used with client or server.",
  "repository": {
    "type": "git",
    "url": "https://github.com/splayfee/fsm.git"
  },
  "bugs": {
    "url": "https://github.com/splayfee/fsm/issues",
    "email": "david@edium.com"
  },
  "docs": {
    "url": "https://github.com/splayfee/fsm/blob/master/README.md"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean --tsconfig tsconfig.tsup.json",
    "lint": "eslint --fix --stats .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "keywords": [
    "finite state machine",
    "fsm",
    "workflow",
    "game engine",
    "state",
    "transitions",
    "triggers",
    "actions"
  ],
  "homepage": "https://github.com/splayfee/fsm",
  "author": "David LaTour <david@edium.com>",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "lodash-es": "^4.17.21",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
